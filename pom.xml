    <groupId>cn.wanfeng</groupId>
    <artifactId>simpleproto</artifactId>
    <version>${revision}</version>

    <packaging>pom</packaging>
    <name>simpleproto</name>

    <modules>
        <!-- 基础业务对象实现，spring启动配置数据源等-->
